{
    "name": "alkimisti/simplerouter",
    "type": "library",
    "description": "A simple PSR-4 router",
    "keywords": [
        "alkimisti",
        "simplerouter"
    ],
    "homepage": "https://github.com/Alkimisti/simplerouter",
    "license": "MIT",
    "authors": [
        {
            "name": "Tahir Hoxha",
            "email": "tahir.hoxha@gmail.com",
            "homepage": "https://codemolecules.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
	"minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "alkimisti\\simplerouter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "alkimisti\\simplerouter\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
